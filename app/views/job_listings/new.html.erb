  <div class="container">
    <div class="create-event-wrapper border-blue">

      <h1>CREATE A JOB: STEP 2</h1>
      <p class="text-center">Create the job you will offer for <%=@event.title.upcase%></p>


      <%= form_for @job_listing, url: event_job_listings_path(@event),  method: :post do |f| %>
        <div class="form-group event-info">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control event-field', placeholder: "Insert job title that will be displayed" %>
        </div>

        <div class="form-group event-info">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control event-field', placeholder: "Insert job description" %>
        </div>


        <div class= "row">
          <div class = "form-group col-xs-6 event-info">
           <%= f.label :start_date %>
            <%= f.text_field :start_date, required: true, class: 'form-control event-field datepicker' %>
          </div>

          <div class="form-group col-xs-6 event-info">
           <%= f.label :end_date %>
            <%= f.text_field :end_date, required: true, class: 'form-control event-field datepicker' %>
          </div>
        </div>

        <div class= "row">
          <div class = "form-group col-xs-6 event-info">
           <%= f.label :start_time %>
            <%= f.time_field :start_time, class: 'form-control event-field' %>
          </div>

          <div class="form-group col-xs-6 event-info">
           <%= f.label :end_time %>
            <%= f.time_field :end_time, class: 'form-control event-field' %>
          </div>
        </div>


        <div class = "row">
          <div class="form-group col-xs-12 event-info">
           <%= f.label :schedule_detail %>
            <%= f.text_field :schedule_detail, class: 'form-control event-field', placeholder: "Insert job schedule details" %>
          </div>
        </div>

        <div class = "row">
          <div class="form-group col-xs-6 event-info">
            <%= f.label :dress_code %>
            <%= f.text_field :dress_code, class: 'form-control event-field', placeholder: "Insert required dress code for the job" %>
          </div>

            <div class="form-group col-xs-6 event-info">
            <%= f.label :gender %> <br>
            <%= f.select :gender, options_for_select([["No preference"], "Male", "Female"]), class: 'form-control event-field' %>
          </div>
        </div>


      <div class = "row">
        <div class="form-group col-xs-6 event-info">
            <%= f.label :salary  %>
            <%= f.text_field :salary, class: 'form-control event-field', placeholder: "Insert salary for the mission"%>
        </div>

        <div class="form-group col-xs-6 event-info">
          <%= f.label :currency  %> <br>
          <%= f.select :currency, options_for_select([["EUR"], "USD", "GBP"]), class: 'form-control event-field', id: "select-currency"%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-sm-6 col-sm-offset-3">
          <%= f.submit class: 'btn button-form button-create' %>
        </div>
      </div>
      <% end %>
      </div>
  </div>
</div>
