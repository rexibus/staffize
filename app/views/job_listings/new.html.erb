<h1>CREATE A JOB: STEP 2</h1>
<p>Create the job you will offer for <%=@event.title.upcase%></p>

<%= form_for @job_listing, url: event_job_listings_path(@event),  method: :post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: 'form-control' "datepicker" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: 'form-control' "datepicker" %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
