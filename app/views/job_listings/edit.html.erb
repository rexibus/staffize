<div class="container">
  <div class="create-event-wrapper border-blue">
    <h1>UPDATE YOUR JOB LISTING</h1>

    <%= form_for [@event ,@job_listing] do |f| %>
      <div class="form-group event-info">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control event-field' %>
      </div>

      <div class="form-group event-info">
        <%= f.label :description %>
        <%= f.text_field :description, required: true, class: 'form-control event-field' %>
      </div>

      <div class="form-group event-info">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: 'form-control event-field datepicker' %>
      </div>

      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.date_field :end_date, class: 'form-control event-field datepicker' %>
      </div>
      <div class="row">
        <div class="col-xs-6 col-sm-4 col-sm-offset-2">
          <%= f.submit class: 'btn button-form button-create' %>
        </div>
      <% end %>
        <div class="col-xs-6 col-sm-4">
          <%= link_to "Back", job_listings_path, class: "btn button-form button-create" %>
        </div>
    </div>
  </div>
</div>
