<div>
  <%= form_tag(job_listings_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Jobs" %>
  <%= submit_tag "Search", :name => nil %>
  <% if @job_listings.blank? %>
  <h4>No results</h4>
  <% end %>
  <% end %>
</div>

<h1>Job Listings</h1>

<div class = "job-listings">
  <% @job_listings.each do |job| %>
  <div class ="job-listing-cards">
    <h3><%= link_to job.title, job_listing_path(job) %></h3>
    <p><%= job.description %></p>
    <p>Dates: <%= job.start_date.strftime("%d %m %Y") %> // <%= job.end_date.strftime("%d %m %Y") %></p>
    <p><%= link_to job.event.title, event_path(job.event) %></p>
    <p><%= job.event.venue %></p>
    <p><%= job.salary %> <%= job.currency %></p>
  </div>

  <div>
    <% if current_user && current_user.role == "employer" %>
      <ul>
        <li>
          Job created: <%= job.created_at.strftime("%d %m %Y")%>
        </li>
        <li>
          <%= link_to "#{job.bookings.count}" + " applied", my_applicants_job_listing_path(job) %>
        </li>
        <li>
          <% counter = 0 %>
          <% job.bookings.each do |booking|%>
            <% if booking.status == "declined" %>
              <% counter += 1 %>
            <% end %>
            <%= counter %> declined
          <% end %>
        </li>
        <li>
          <% counter_2 = 0 %>
          <% job.bookings.each do |booking|%>
            <% if booking.status == "accepted" %>
              <% counter_2 += 1 %>
            <% end %>
            <%= counter_2 %> accepted
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
<% end %>



