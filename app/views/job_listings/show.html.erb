<div>
  <h1><%= @job_listing.title %></h1>
</div>

<div class="row">

  <div class="col-xs-8">

    <div class="left-show-cards">
      <p><%= (@counter > 0) ? "#{@counter} people applied for this job" : "Be the first to apply" %></p>
    </div>

    <div class="left-show-cards">
      <p>Description: <%= @job_listing.description %></p>
      <p>Dress Code: <%= @job_listing.dress_code %></p>

    </div>

    <div class="left-show-cards">
      <p>Venue: <%= @job_listing.event.venue %></p>
      <p>Address: <%= @job_listing.event.address %></p>
      <p>Venue Detail: <%= @job_listing.event.venue_detail %></p>
    </div>

    <div class="left-show-cards">
      <p>Schedule Detail: <%= @job_listing.schedule_detail %></p>
    </div>

  </div>

  <div class="col-xs-4 ">

    <div class="right-show-cards">
      <p>Event Dates: <%= @job_listing.start_date.strftime("%d %m %Y") %> -- <%= @job_listing.end_date.strftime("%d %m %Y") %></p>
    </div>


    <div class="right-show-cards">
      <h3>Salary: <%= @job_listing.salary %> <%= @job_listing.currency %></h3>
    </div>



    <div>
        <% if current_user and current_user.role == "candidate" %>
          <p><%= (@counter > 0) ? "#{@counter} people applied for this job" : "Be the first to apply" %></p>
        <% end %>
    </div>

    <div class="apply-for-job-button">
      <% if current_user and current_user.role == "candidate" %>
      <%= link_to "Apply for this job", new_event_job_listing_booking_path(@event,@job_listing), :class => "btn btn-primary" %>
      <% end %>

      <% if current_user and current_user.role == "employer" %>
      <p> <%= link_to "Update the job", edit_event_job_listing_path(@event) %></p>
      <p><%= link_to "Delete the job", job_listings_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
      <% end %>
    </div>

    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    ></div>

    <p><%= link_to "Back", job_listings_path %></p>


</div>

