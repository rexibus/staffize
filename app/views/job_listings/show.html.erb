<div>
  <h1><%= @job_listing.title %></h1>
</div>
<div class = "card-container">
  <div class = "left-show-cards">
    <p><%= @counter %> people applied to this job<p>
    </div>

    <div class = "left-show-cards">
      <p><%= @job_listing.description %></p>
    </div>

    <div class = "left-show-cards">
      <p><%= @job_listing.event.venue %></p>
      <p><%= @job_listing.event.address %></p>
      <p><%= @job_listing.event.venue_detail %></p>
    </div>

    <div class = "left-show-cards">
      <p><%= @job_listing.start_date.strftime("%d %m %Y") %> -- <%= @job_listing.end_date.strftime("%d %m %Y") %></p>
    </div>

    <div class = "right-show-cards">
      <h3><%= @job_listing.salary %> <%= @job_listing.currency %></h3>
    </div>

    <p><%= @job_listing.schedule_detail %></p>
    <p><%= @job_listing.dress_code %></p>
    <% if current_user and current_user.role == "candidate" %>
    <p><%= @counter %> applied to this job<p>
      <% end %>
    </div>

    <div class = "apply-for-job-button">
      <% if current_user and current_user.role == "candidate" %>
      <%= link_to "Apply for this job", new_event_job_listing_booking_path(@event,@job_listing), :class => "btn btn-primary" %>
      <% end %>

      <% if current_user and current_user.role == "employer" %>
      <p> <%= link_to "Update the job", edit_event_job_listing_path(@event) %></p>
      <p><%= link_to "Delete the job", job_listings_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
      <% end %>
    </div>


    <div class = "right-show-cards">
      <h3><%= @job_listing.salary %> <%= @job_listing.currency %></h3>
    </div>

    <div class = "apply-for-job-button"><%= link_to "Apply for this job", new_event_job_listing_booking_path(@event,@job_listing), :class => "btn btn-primary" %></div>


    <p><%= link_to "Back", job_listings_path %></p>
    <p><%= link_to "Update the job", edit_event_job_listing_path(@event) %></p>

