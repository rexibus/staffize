<h2>Are you sure you want to apply for this job?</h2>
<hr>


<%= simple_form_for [@job_listing, @booking] do |f| %>
  <%= f.input :start_date, :input_html => { :value => @job_listing.start_date }, as: :hidden %>
  <%= f.input :end_date, :input_html => { :value => @job_listing.end_date }, as: :hidden %>
  <%= button_to 'Yes', { :action => 'create'}, :method => :post %>
<% end %>
<hr>


<%= link_to "Go back", job_listing_path(@job_listing) %>
