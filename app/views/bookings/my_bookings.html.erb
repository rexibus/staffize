<div class ="container">
  <h1 class="candidates-index-title"> My Applications</h1>

  <% if @bookings_user.empty? %>

    <h4 class="nothing-to-display"> You have no applications to display. <br><br>
      <%= link_to "Browse jobs now", job_listings_path, class: "btn btn-right-side-secondary-candidate-job"%>
    </h4>

  <% else %>

  <div class="events-list-wrapper">
    <% @bookings_user.each do |b| %>
      <div class="cards-wrapper-flex">
        <div class="offers-card-flex border-green-right">
          <p id="company-name"><span id="company-name-label"><em> Company: </em></span><br> <%= b.job_listing.event.user.company_name %> </p>
        </div>

        <div class="second-offers-card border-green-right">
          <div>
            <p><strong>Event: </strong> <%= b.job_listing.event.title %></p>
            <p><strong>Job offered: </strong> <%= b.job_listing.title %></p>
            <p>
              <strong>Start date:</strong> <%= b.start_date.strftime("%A, %d %B %Y") %><strong> - </strong><strong>End date:</strong> <%= b.end_date.strftime("%A, %d %B %Y") %>
            </p>
          </div>
          <div>
            <p>
            <strong>Total salary: <%= b.job_listing.salary %> <%= b.job_listing.currency %></strong>
            </p>
          </div>
        </div>

        <div class="third-offers-card border-green">
          <p><strong>Applied on:</strong> <br> <%= b.created_at.strftime("%A, %d %B %Y") %></p>
          <div class="applicants-accept-decline">
            <%= link_to "View", job_listing_path(b.job_listing), class: "btn btn-accept" %>
            <%= link_to "Delete", booking_path(b), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-decline" %>
          </div>
        </div>

    <% end %>
    </div><!-- total wrapper -->
  <% end %>
</div> <!-- container -->






