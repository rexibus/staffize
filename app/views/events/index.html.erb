<div>
  <%= form_tag(events_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Event" %>
    <%= submit_tag "Search", :name => nil %>
<% if @events.blank? %>
  <h4>There are no events containing the term <%= params[:search] %>.</h4>
<% end %>
<% end %>
</div>

<h1>Events</h1>

<% @events.each do |event| %>
<ul>
  <li>
    <p> <strong><%= link_to event.title, event_path(event) %></strong> -- <%= link_to "Update Event", edit_event_path(event) %> -- <%= link_to "Delete Event", event_path(event),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
  </li>
</ul>
<% end %>
<%= link_to "new event", new_event_path %>
