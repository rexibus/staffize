<div class= "container">



  <div class = "row">

<div class = "col-xs-6 col-sm-3 col-md-3 column-event">

    <div>
      <p style ="font-weight:bold"> Event: </p>
    <p> <%= @event.title %></p>

  </div>

  </div>
  <div class = "col-xs-6 col-sm-6 col-md-6 column-event">




  <div>
    <p> <strong> description: </strong> <%= @event.description %></p>
    <p> <strong>venue: </strong>  <%=  @event.venue %></p>
    <p> <strong>Period:</strong>  <%= @event.start_date.strftime("%d %m %Y") %> -- <%= @event.end_date.strftime("%d %m %Y") %></p>
    <p> <strong>Address:</strong> <%=   @event.address %><p>
      <p> <strong>City:</strong>   <%= @event.city %><p>
        <p> <strong>Organized by: </strong> <%= @event.user.company_name %></p>
      </div>


      </div>

      <div class = "col-xs-12 col-sm-3 col-md-3 status-event">
        <% if current_user.role == "employer" %>
        <div >
        <div>

          <%= link_to "Edit this event", edit_event_path(@event), :class => "btn btn-primary btn-block" %>
        </div>


        <div><%= link_to "Create a new event", new_event_path, :class => "btn btn-primary btn-block" %></div>
        <div> <%= link_to "new job listing", new_event_job_listing_path(@event), :class => "btn btn-primary btn-block" %></div>
        <% end %>

        <div> <%= link_to "Back", events_path, :class => "btn btn-primary btn-block" %></div>
        </div>


    </div>
    </div>


  </div>
