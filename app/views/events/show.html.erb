<div>
  <h1><%= @event.title %></h1>
</div>

<div>
  <h3><%= @event.description %></h3>
</div>

<div>
  <p><%= @event.venue %></p>
  <p><%= @event.venue_detail %></p>
  <p><%= @event.start_date.strftime("%d %m %Y") %> -- <%= @event.end_date.strftime("%d %m %Y") %></p>
  <p><%= @event.address %><p>
  <p><%= @event.zip_code %><p>
  <p><%= @event.province %><p>
  <p><%= @event.country %><p>
  <p>Organized by: <%= @event.user.company_name %></p>
</div>

<% if current_user.role == "employer" %>
<div>
  <%= link_to "Edit this event", edit_event_path(@event), :class => "btn btn-primary" %>
</div>
<% end %>

<p> <%= link_to "Back", events_path %></p>

<% if current_user.role == "employer" %>
<p><%= link_to "Create a new event", new_event_path %></p>
<% end %>

<% if current_user.role == "employer" %>
<p> <%= link_to "new job listing", new_event_job_listing_path(@event) %></p>
<% end %>
