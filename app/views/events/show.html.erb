<h1>Events#show</h1>
<p>Find me in app/views/events/show.html.erb</p>

<div>
  <h1><%= @event.title %></h1>
</div>

<div>
  <h3><%= @event.description %></h3>
</div>

<div>
  <p><%= @event.venue %></p>
  <p><%= @event.venue_detail %></p>
  <p><%= @event.start_date.strftime("%d %m %Y") %> -- <%= @event.end_date.strftime("%d %m %Y") %></p>
  <p><%= @event.address %><p>
  <p><%= @event.zip_code %><p>
  <p><%= @event.province %><p>
  <p><%= @event.country %><p>
</div>

<div>
  <%= link_to "Edit this event", edit_event_path(@event), :class => "btn btn-primary" %>
</div>

<%= link_to "Back", events_path %>
<%= link_to "Create a new event", new_event_path %>


