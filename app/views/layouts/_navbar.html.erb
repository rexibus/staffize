


<div class="navbar-wagon-other navbar-fixed-top">
  <!-- Logo -->
    <%= link_to image_tag("LogoStaffize.png"), root_path , {class: 'navbar-wagon-brand'} %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <% if current_user.role == "employer" %>
        <!-- visitor is logged in as employer -->
          <%= link_to "Browse Candidates", candidates_job_listings_path, class: "navbar-wagon-item navbar-wagon-link" %>

          <%= link_to "Create a Job", new_event_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "My Events", events_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "My Offers", offers_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "My Applicants", applicants_path, class: "navbar-wagon-item navbar-wagon-link" %>

          <%= link_to "My Jobs", job_listings_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "My Staff", staff_path, class: "navbar-wagon-item navbar-wagon-link" %>

        <% end %>

        <% if current_user.role == "candidate" %>
          <!-- visitor is logged in as candidate-->

            <%= link_to "Browse Jobs", job_listings_path, class: "navbar-wagon-item navbar-wagon-link" %>

            <%= link_to "My Received Offers", received_offers_path, class: "navbar-wagon-item navbar-wagon-link" %>

            <%= link_to "My Applications", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
            <%= link_to "My Jobs", candidate_jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>

        <% end %>

        <!-- visitor logged in -->
          <%= link_to "Log Out", destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: 'delete' %>

      <% else %>
        <!-- visitor is logged out -->

              <%= link_to "Browse Candidates", candidates_job_listings_path, class: "navbar-wagon-item navbar-wagon-link" %>

              <%= link_to "Browse Jobs", job_listings_path, class: "navbar-wagon-item navbar-wagon-link" %>

              <%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link login" %>

              <%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link signup" %>
      <% end %>

